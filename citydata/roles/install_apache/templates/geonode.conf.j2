WSGIDaemonProcess {{ project_dir }} python-path={{ ansible_env.HOME }}/{{ project_dir }}:{{ ansible_env.HOME }}/.virtualenvs/{{ project_dir }}/lib/python2.7/site-packages user=ubuntu threads=15 processes=2

<VirtualHost *:80>
    ServerName http://localhost
    ServerAdmin webmaster@localhost
    DocumentRoot {{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}
    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log combined

    WSGIProcessGroup {{ project_dir }}
    WSGIPassAuthorization On
    WSGIScriptAlias / {{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/wsgi.py

    Alias /static/ {{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/static_root/
    Alias /uploaded/ {{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/uploaded/

    <Directory "{{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/">
         <Files wsgi.py>
             Order deny,allow
             Allow from all
             Require all granted
         </Files>

        Order allow,deny
        Options -Indexes +FollowSymLinks
        Allow from all
    </Directory>

    <Directory "{{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/static_root/">
        Order allow,deny
        Options -Indexes +FollowSymLinks
        Allow from all
        Require all granted
    </Directory>

    <Directory "{{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/uploaded/thumbs/">
        Order allow,deny
        Options -Indexes +FollowSymLinks
        Allow from all
        Require all granted
    </Directory>

    <Directory "{{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/uploaded/people_group/">
        Order allow,deny
        Options -Indexes +FollowSymLinks
        Allow from all
        Require all granted
    </Directory>

    <Directory "{{ ansible_env.HOME }}/{{ project_dir }}/{{ project_dir }}/uploaded/avatars/">
        Order allow,deny
        Options -Indexes +FollowSymLinks
        Allow from all
        Require all granted
    </Directory>

    <Proxy *>
        Order allow,deny
        Allow from all
    </Proxy>

    ProxyPreserveHost On
    ProxyPass /geoserver http://127.0.0.1:8080/geoserver
    ProxyPassReverse /geoserver http://127.0.0.1:8080/geoserver

</VirtualHost>
